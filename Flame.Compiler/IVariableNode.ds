using System;
using System.Collections.Generic;
using System.Text;

namespace Flame.Compiler
{
	public enum VariableNodeAction
	{
		Get,
		Set,
		AddressOf,
		Release,
		Other
	}

	public interface IVariableNode : INode
	{
		const IVariable GetVariable();
		VariableNodeAction Action { const get; }
	}

	public interface ISetVariableNode : IVariableNode
	{
		IExpression Value { const get; }
	}
}
