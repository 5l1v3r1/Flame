// A compare-test test description.

build
{
    $(dsc) $(Filename).ds -platform clr -o bin/$(Filename).exe $(Flags);
}

run
{
    return = @($(net-runtime) bin/$(Filename).exe $Input1)@($(net-runtime) bin/$(Filename).exe $Input2);
}

configs
{
    Og { Flags = -Og; }
    O2 { Flags = -O2; }
    O3 { Flags = -O3; }
}

init
{
    Filename = Color;
    Input1 = "r:1";
    Input2 = "g:0.4";
}
