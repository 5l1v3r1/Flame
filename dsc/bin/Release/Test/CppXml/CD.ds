/// <summary>
/// Describes a CD catalog.
/// </summary>
public struct CDCatalog
{
    public const this();
    public const this(set vector<CD> Items);
    
    private vector<CD> Items;

    public const vector<CD> GetItems() return Items;    

    public void AddItem(CD Value)
    {
        this.Items.push_back(Value);
    }
}