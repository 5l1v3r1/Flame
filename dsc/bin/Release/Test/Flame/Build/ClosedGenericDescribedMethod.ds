using System;
using System.Collections.Generic;

namespace Flame.Build
{
	public class ClosedGenericDescribedMethod : TemplatedMethod
	{
		public const this(set IMethod Template, set IEnumerable<IType> TypeArguments);
		
		public IEnumerable<IType> TypeArguments { const get; private set; }
		
		public override const IEnumerable<IType> GetGenericArguments() : TemplatedMethod.GetGenericArguments
		{
			return TypeArguments;
		}
		
		public override IMethod MakeGenericMethod(IEnumerable<IType> TypeArguments) : TemplatedMethod.MakeGenericMethod
		{
			return Template.MakeGenericMethod(TypeArguments);
		}
		public  override IMethod GetGenericDeclaration() : TemplatedMethod.GetGenericDeclaration
		{
			return Template;
		}
		
		public IBoundObject Invoke(IBoundObject Target, IEnumerable<IBoundObject> Arguments) : TemplatedMethod.Invoke
		{
			return null; // Not implemented
		}
	}
}