using System;
using System.Collections.Generic;
using System.Text;

namespace Flame
{
	/// <summary>
	/// A generic constraint that specifies that the type argument should satisfy all given child constraints.
	/// </summary>
	public class AndConstraint : IGenericConstraint
	{
		public const this(set IEnumerable<IGenericConstraint> Constraints);
		
		public IEnumerable<IGenericConstraint> Constraints { const get; private set; }
		
		public const bool Satisfies(IType TypeArgument)
		{
			foreach (var item in Constraints)
			{
				if (!item.Satisfies(TypeArgument))
				{
					return false;
				}
			}
			return true;
		}
	}
}