public class ArraySlice
{
    public this(set int^ arr, set int len);

    private int^ arr;
    private int len;

    public int Length
    {
        const get return len;
    }

    public int this[int Index]
    {
        const get
        {
            return *((int*)arr + Index);
        }
        set
        {
            *((int*)arr + Index) = value;
        }
    }
}