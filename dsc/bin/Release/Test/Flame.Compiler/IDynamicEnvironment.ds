using System;
using System.Collections.Generic;
using System.Text;

namespace Flame.Compiler
{
	/// <summary>
	/// Represents an environment capable of dynamic code execution.
	/// </summary>
	public interface IDynamicEnvironment : IEnvironment
	{
		/// <summary>
		/// Invokes the provided method dynamically.
		/// </summary>
		IBoundObject InvokeDynamic(IBodyMethod Method, IBoundObject Caller, IEnumerable<IBoundObject> Arguments);
	}
}