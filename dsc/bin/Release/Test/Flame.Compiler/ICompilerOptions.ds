using System;
using System.Collections.Generic;
using System.Text;

namespace Flame.Compiler
{
	public interface ICompilerOptions
	{
		/// <summary>
		/// Gets the option associated with the given key. If no such option has been specified, returns the given default value.
		/// </summary>
		T GetOption<T>(string Key, T Default);
		/// <summary>
		/// Gets a boolean value that indicates whether an option for the given key has been specified.
		/// </summary>
		bool HasOption(string Key);
	}
}