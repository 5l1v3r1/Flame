using System;
using System.Collections.Generic;
using System.Text;
using System.IO;

namespace Flame.Compiler
{
    /// <summary>
    /// Describes a provider of output streams.
    /// </summary>
	public interface IOutputProvider
	{
	    /// <summary>
	    /// Creates and opens an output stream for the specified name.
	    /// </summary>
		Stream Create(string Name, string Extension);
		
		/// <summary>
		/// Creates and opens the default output stream.
		/// </summary>
		Stream Create();
		
		/// <summary>
		/// Gets a boolean value that indicates if the client prefers a single output over many.
		/// </summary>
		bool PreferSingleOutput { const get; }
	}
}