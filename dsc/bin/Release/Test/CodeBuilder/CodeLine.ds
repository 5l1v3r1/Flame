using System;
using System.Collections.Generic;
using System.Text;

namespace Flame.Compiler
{
    public struct CodeLine
    {
        public this(set string Text);
        public this(set string Text, set int32 Indentation);

        public bool IsWhitespace
        {
            const get
            {
                return string.IsNullOrWhiteSpace(Text);
            }
        }

        public string Text { const get; set; }
        public int32 Indentation { const get; set; }

        public override const string ToString()
        {
            return this.ToString("\t");
        }
        public const string ToString(string IndentationString)
        {
            StringBuilder sb = new StringBuilder();
            for (int32 i = 0; i < Indentation; i++)
            {
                sb.Append(IndentationString);
            }
            sb.Append(Text);
            return sb.ToString();
        }
    }
}