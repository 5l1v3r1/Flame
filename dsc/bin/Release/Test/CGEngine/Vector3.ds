namespace Engine
{
    /// <summary>
    /// Describes a three-dimensional vector.
    /// </summary>
    public struct Vector3<T>
    {
        public const this();
        public const this(Vector2<T> XY, set T Z)
        {
            this.X = XY.X;
            this.Y = XY.Y;
        }
        public const this(set T X, set T Y, set T Z);

        public T X;
        public T Y;
        public T Z;
    }
}