namespace Engine
{
    public struct Vector4<T>
    {
        public const this();
        public const this(Vector3<T> XYZ, set T W)
        {
            this.X = XYZ.X;
            this.Y = XYZ.Y;
            this.Z = XYZ.Z;
        }
        public const this(set T X, set T Y, set T Z, set T W);

        public T X;
        public T Y;
        public T Z;
        public T W;
    }
}