namespace Engine
{
    /// <summary>
    /// Describes a solid color brush.
    /// </summary>
    public class SolidColorBrush : IBrush
    {
        /// <summary>
        /// Creates a new solid color brush that is fully transparent.
        /// </summary>
        public const this()
        {
            Color = new Vector4<double>(0.0, 1.0, 1.0, 1.0);
        }
        /// <summary>
        /// Creates a new solid color brush based on the given color.
        /// </summary>
        public const this(set Vector4<double> Color);

        /// <summary>
        /// Gets the brush's color.
        /// </summary>
        public Vector4<double> Color { const get; private set; }

        /// <summary>
        /// Gets the brush's color at the given position.
        /// </summary>
        public const Vector4<double> GetColor(Vector2<double> Position)
        {
            return Color;
        }
    }
}