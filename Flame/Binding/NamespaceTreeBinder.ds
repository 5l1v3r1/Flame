using System;
using System.Collections.Generic;
using System.Text;

namespace Flame.Binding
{
	public class NamespaceTreeBinder : BinderBase
	{
		public const this(set IEnvironment environment, set INamespaceTree NamespaceTree);
	
		public INamespaceTree NamespaceTree { const get; private set; }
	
		private IEnvironment environment;
		/// <summary>
		/// Gets the environment for this binder.
		/// </summary>
        public override IEnvironment Environment : BinderBase.Environment { const get return environment; }
        public override const IEnumerable<IType> GetTypes() : BinderBase.GetTypes
        {
        	return NamespaceTree.GetAllTypes();
        }

        public override IType BindTypeCore(string Name)
        {
        	return NamespaceTree.FindType(Name);
        }
	}
}
