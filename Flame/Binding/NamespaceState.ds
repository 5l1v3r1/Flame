using System;
using System.Collections.Generic;
using System.Text;

namespace Flame.Binding
{
    public class NamespaceState
    {
        public this()
        {
            UsingNamespaces = new List<string>();
            MappedNamespaces = new Dictionary<string, string>();
        }
        public this(NamespaceState Other)
        {
            UsingNamespaces = new List<string>(Other.UsingNamespaces);
            MappedNamespaces = new Dictionary<string, string>(Other.MappedNamespaces);
        }

        public List<string> UsingNamespaces { const get; set; }
        public Dictionary<string, string> MappedNamespaces { const get; set; }
    }
}