using System;
using System.Collections.Generic;

namespace Flame.Build
{
	public abstract class DescribedMember : IMember
	{
		protected const this()
		{
			this.attrs = new List<IAttribute>();	
		}
		public const this(set string Name)
		{
			this.attrs = new List<IAttribute>();	
		}
	
		public string Name { const get; protected set; }
		public abstract string FullName { const get; }
		
		private List<IAttribute> attrs;
		protected List<IAttribute> Attributes
		{
			const get return attrs;
		}
		
		public virtual void AddAttribute(IAttribute Attribute)
		{
			attrs.Add(Attribute);
		}
		
		public const IEnumerable<IAttribute> GetAttributes()
		{
			return attrs;
		}
	}
}