using System;
using System.Collections.Generic;
using System.Text;
using Flame.Primitives;

namespace Flame
{
	public class DescriptionAttribute : IAttribute
	{
		static this()
		{
			attrType = new PrimitiveType<IAttribute>("DescriptionAttribute", 0, null);
		}
		
		private static IType attrType;
		public static IType DescriptionAttributeType { const get return attrType; }
	
		public const this(set string Description)
		{
			this.Tag = "summary";
			this.Attributes = new Dictionary<string, string>();
		}
		public const this(set string Tag, set string Description)
		{
			this.Attributes = new Dictionary<string, string>();
		}
		public const this(set string Tag, set string Description, set IReadOnlyDictionary<string, string> Attributes);
		
		public string Tag { const get; private set; }
		public IReadOnlyDictionary<string, string> Attributes { const get; private set; }
		public string Description { const get; private set; }
		
		public IType AttributeType { const get return attrType; }
		
		public IBoundObject Value
		{
			const get
			{
				return new BoundPrimitive<IAttribute>(AttributeType, this);
			}
		}
	}
}